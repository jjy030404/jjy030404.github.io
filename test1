<body>

    <h1>NYC Streets: Stand Still and Become Everyone’s Obstacle</h1>
    <p>Select a location to see more information.</p>

    <button class="content-button" onclick="showInfo(0)">Show Content 1</button>
    <button class="content-button" onclick="showInfo(1)">Show Content 2</button>

    <div id="info-box">
        <img id="location-img" src="" alt="Location Image">
        <p id="location-description"></p>
    </div>

    <script>
        // Define some content (you can add more or customize)
        const contents = [
            {
                image: 'https://example.com/times_square.jpg',
                description: 'Times Square: The iconic heart of NYC.'
            },
            {
                image: 'https://example.com/east_village.jpg',
                description: 'East Village: The hub of culture and art.'
            }
        ];

        // Reference to the info-box
        const infoBox = document.getElementById('info-box');
        const locationImg = document.getElementById('location-img');
        const locationDescription = document.getElementById('location-description');

        // Function to show info when a location is selected
        function showInfo(index) {
            const content = contents[index];
            locationImg.src = content.image;
            locationDescription.textContent = content.description;

            // Display the info box
            infoBox.style.display = 'block';
        }
    </script>

</body>
