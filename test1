                 url('src/font/Gotham-Book.woff') format('woff'),
                 url('src/font/Gotham-Book.ttf') format('truetype'),
                 url('src/font/Gotham-Book.svg#Gotham-Book') format('svg');
            font-weight: normal;
            font-style: normal;
        }

        /* Apply the Gotham font */
        body {
            font-family: 'Gotham', Arial, sans-serif;
